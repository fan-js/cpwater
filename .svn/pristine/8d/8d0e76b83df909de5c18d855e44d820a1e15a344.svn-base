package cn.ritac.mmbs.comm.jobs;

import java.text.SimpleDateFormat;
import java.util.Date;
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Component;

@Component
public class DevicesOnLineJobs {
	
	private Logger logger = LoggerFactory.getLogger(this.getClass());
	
	@Autowired
	private cn.ritac.mmbs.service.MQTTService MQTTService;
	
	@Scheduled(cron="*/60 * * * * ?")
    public void cronJob(){
		logger.info(new SimpleDateFormat("yyyy-MM-dd hh:mm:ss").format(new Date())+" >>同步设备上线执行....");
        MQTTService.getDeviceStatus();
	}
}
